{
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "parser": "flow",
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "none",
    "useTabs": false,
    "overrides": [
      {
        "files": [".prettierrc", "*.json", ".eslintrc"],
        "options": { "parser": "json" }
      },
      {
        "files": [
          "*.css", "*.less", "*.scss"
        ],
        "options": {
          "parser": "postcss"
        }
      }
    ]
}
